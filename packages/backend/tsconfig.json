{
  "compilerOptions": {
    "target": "es2023",
    "module": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "shared/*": ["packages/backend/src/shared/*"]
    },
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "lib": ["esnext"]
}
