{
  "compilerOptions": {
    "target": "es2023",
    "module": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"  
  ],
  "exclude": [
    "node_modules"
  ],
  "lib": ["esnext"]
}
